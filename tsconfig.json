{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "alwaysStrict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "swc": true
  }
}
