{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "alwaysStrict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "#root/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
